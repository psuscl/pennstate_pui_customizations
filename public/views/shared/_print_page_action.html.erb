<% if AppConfig[:pui_max_concurrent_pdfs] > 0 %>
  <%= form_tag(app_prefix("/repositories/#{params[:rid]}/resources/#{params[:id]}/pdf"), method: 'post', :id => 'print_form') do %>
    <%= hidden_field_tag(:base_token, SecureRandom.hex) %>
    <%= hidden_field_tag(:token, "") %>
    <button id="print_button" class="btn page_action request btn-default">
      <i class="fa fa-file-pdf-o"></i>&nbsp;<span class="print-label"><%= t('actions.print') %></span><span class="generating-label" style="display: none"><%= t('actions.print-generating') %></span>
    </button>
  <% end %>
<% end %>