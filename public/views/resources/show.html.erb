<a name="main" title="<%= t('internal_links.main') %>"></a>
<div id="main-content" class="row resources">
  <div class="col-xs-12" id="info_row">
    <% unless defined?(@no_statement) || !defined?(@search) %>
      <div class="searchstatement"><%= @search[:search_statement].html_safe %></div>
    <% end %>
  </div>
  <div class="resources-sidebar col-xs-12 col-sm-4">
    <%= render partial: 'resources/sidebar', locals: {:result => @result, :props => {:full => true}} %>
  </div>

  <div class="resources-content col-xs-12 col-sm-8">
    <%= render partial: 'shared/record_innards' %>
  </div>
</div>

